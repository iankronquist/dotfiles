grind () {
	find ${2:-.} | grep -i $1
}

usage () {
	du -d1 ${@:-.} | awk '$1 > 10000' | sort -n | awk '{ split( "KB MB GB" , v ); s=1; while( $1 > 1024 ){ $1/=1024; s++ } print int($1)/2 v[s] "\t" $2 }'
}

