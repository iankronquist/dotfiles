# vim: set ft=bash

alias v='vim'
alias l=ls
alias ll='ls -la'
alias sl='ls'
alias venv=virtualenv
alias grep='grep --color=auto'
alias vus='vagrant up && vagrant ssh'

alias rebash="exec bash"


if [[ $(uname) == "Darwin" ]]; then
	alias opn='open'
	alias pp='echo cd `pwd` | pbcopy'
	alias redoc='$(boot2docker shellinit)'

	alias gcc='gcc-4.9'
	alias 'g++'='g++-4.9'

	alias asleep='/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend'
elif [[ $(uname) == "Linux" ]]; then
	alias opn='xdg-open'
	alias pp='echo cd `pwd` | xclip'
	alias ls='ls --color'
fi

alias py=python
alias py3=python3

alias gco='git checkout'
alias ga='git add'
alias gd='git diff'
alias gs='git status'
alias gb='git branch'
alias gn='git net'
alias gp='git pull'
alias gf='git fetch'

alias ggp='cd ~/prose'

# This is prone to change and depends on both my .ssh/config and screen session
alias irc="ssh -t puck 'screen -DR irc'"

